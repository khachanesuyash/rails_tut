<!DOCTYPE html>
<html>
  <head>
    <title>RailsTut</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if flash[:success]%>
      <p><%= flash[:success] %><p>
    <% end%>

    <%= flash[:notice]%><br>
    <%= notice %><br>

    <%= session[:log_in]%>
    <br>

    <%= @site_name%>

    <%= yield %>

    <br><%= render "layouts/footer"%>
  </body>
</html>
